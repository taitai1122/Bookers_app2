<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>


<h1>Books</h1>

<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
  </thead>


<tbody>
<% @books.each do |book| %>
 <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
   <%= link_to "show", book_path(book.id) %>
   <%= link_to "Edit", edit_book_path(book.id) %>
   <%= link_to "Destroy", book_path(book), method: :delete  %>
  </td>
 </tr>
<% end %>
</tbody>
</table>



<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_with model:@book, local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
<% end %>